@model SimpleWebPositionApp.Models.PasswordDTO
@{
    ViewData["Title"] = "Ταυτοποίηση";
}

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="Pass" class="control-label">΄Κωδικός Εισόδου</label>
                <input asp-for="Pass" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Είσοδος" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

